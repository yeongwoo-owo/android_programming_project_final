<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="70dp"
    android:layout_height="70dp"
    android:layout_margin="5dp"
    android:id="@+id/squad_player_view"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/player_image_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/player_background" />

    <ImageView
        android:id="@+id/player_image"
        android:layout_width="50dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/player_name_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/no_player" />

    <TextView
        android:id="@+id/player_ovr_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/player_position_text"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="12dp"
        android:text="100"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/player_position_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/player_name_text"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="12dp"
        android:text="LW"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/player_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Player"
        android:textSize="14dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/player_pay_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/player_name_text"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="12dp"
        android:text="32"
        android:textStyle="bold"
        android:textColor="@color/black"/>

</androidx.constraintlayout.widget.ConstraintLayout>