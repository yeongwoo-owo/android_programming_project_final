<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/player_search_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="fitXY"
        android:layout_margin="20dp"
        android:src="@drawable/no_player"/>

    <ImageView
        android:id="@+id/player_search_entry_season"
        android:layout_width="20dp"
        android:layout_height="15dp"
        app:layout_constraintTop_toTopOf="@id/player_search_entry_name"
        app:layout_constraintBottom_toBottomOf="@id/player_search_entry_name"
        app:layout_constraintStart_toEndOf="@id/player_search_image"
        app:layout_constraintEnd_toStartOf="@id/player_search_entry_name"
        android:scaleType="fitXY"
        android:layout_marginVertical="20dp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/player_search_entry_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/player_search_entry_prefer"
        app:layout_constraintStart_toEndOf="@id/player_search_entry_season"
        android:layout_marginVertical="20dp"
        android:layout_marginStart="10dp"
        android:textSize="20sp"
        android:text="리오넬 메시" />

    <TextView
        android:id="@+id/player_search_entry_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/player_search_entry_prefer"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp"
        android:textSize="20sp"
        android:text="32" />

    <TextView
        android:id="@+id/player_search_entry_prefer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/player_search_entry_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/player_search_image"
        android:layout_margin="20dp"
        android:textSize="20sp"
        android:text="RW: 102" />

</androidx.constraintlayout.widget.ConstraintLayout>